<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gioenmark.myapplication.DetailsScherm"
    tools:showIn="@layout/app_bar_details_scherm">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:id="@+id/textViewId"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ects:"
        android:id="@+id/textView6"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade"
        android:id="@+id/textView7"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Period"
        android:id="@+id/textView8"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gehaald"
        android:id="@+id/textView9"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView10"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView11"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView13"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="35dp" />

    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="35dp"
        android:maxLength="3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Als behaald is &apos;checked&apos;"
        android:id="@+id/checkBox"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="35dp"
        android:checked="false" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Aanpassen"
        android:id="@+id/buttonCijfer"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="100dp"
        android:onClick="changeDatabase"
        android:background="#008383"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Naar overzicht"
        android:id="@+id/buttonTerug"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="160dp"
        android:onClick="toOverzicht"
        android:background="#008383"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
