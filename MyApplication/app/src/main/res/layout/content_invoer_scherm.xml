<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gioenmark.myapplication.InvoerScherm"
    tools:showIn="@layout/app_bar_invoer_scherm">


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Eerste periode"
        android:id="@+id/button"
        android:onClick="grabJsonFirstPeriod"
        android:background="#008383"
        android:textColor="#ffffff"
        android:layout_above="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Tweede periode"
        android:id="@+id/button2"
        android:onClick="grabJsonSecondPeriod"
        android:background="#008383"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/button3"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Derde periode"
        android:id="@+id/button3"
        android:onClick="grabJsonThirthPeriod"
        android:background="#008383"
        android:textColor="#ffffff"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button4"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Vierde periode"
        android:id="@+id/button4"
        android:onClick="grabJsonFourthPeriod"
        android:background="#008383"
        android:textColor="#ffffff"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Kies periode"
        android:id="@+id/button5"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="360dp"
        android:onClick="showButtons"
        android:visibility="invisible"
        android:background="#008383"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Kies een periode en bekijk je behaalde cijfers!"
        android:id="@+id/Textkeuze"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="14dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />
</RelativeLayout>
